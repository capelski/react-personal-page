{
    "name": "react-personal-page",
    "version": "1.0.0",
    "description": "Personal page built in react",
    "main": "dist/src-server/index.js",
    "scripts": {
        "build": "npm run clean:build && npm run build:client && npm run build:server",
        "build:client": "webpack --config webpack/production.config.js",
        "build:server": "tsc -p tsconfig-server.json",
        "build:ts": "tsc --noEmit -p tsconfig-client.json",
        "clean:build": "rm -rf dist",
        "clean:dependencies": "rm -rf node_modules/ package-lock.json",
        "prettier": "prettier --list-different \"{src-client,src-server}/**/*.{ts,tsx}\"",
        "prettier:fix": "prettier --write \"{src-client,src-server}/**/*.{ts,tsx}\"",
        "start": "node dist/src-server/index.js",
        "start:dev": "webpack-dev-server --config webpack/development.config.js"
    },
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "4.17.6",
        "@types/react": "16.9.41",
        "@types/react-dom": "16.9.8",
        "@types/react-helmet": "6.0.0",
        "@types/react-router-dom": "5.1.5",
        "@types/react-transition-group": "4.4.0",
        "awesome-typescript-loader": "5.2.1",
        "copy-webpack-plugin": "6.0.2",
        "css-loader": "3.6.0",
        "html-loader": "1.1.0",
        "html-webpack-plugin": "4.3.0",
        "mini-css-extract-plugin": "0.9.0",
        "node-sass": "4.13.0",
        "prettier": "2.0.5",
        "sass-loader": "8.0.2",
        "ts-node": "8.10.2",
        "typescript": "3.9.5",
        "webpack": "4.43.0",
        "webpack-cli": "3.3.12",
        "webpack-dev-server": "3.11.0",
        "webpack-merge": "4.2.2"
    },
    "dependencies": {
        "express": "4.17.1",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-gist": "1.2.1",
        "react-helmet": "6.1.0",
        "react-router-dom": "5.2.0",
        "react-transition-group": "4.4.1"
    }
}
